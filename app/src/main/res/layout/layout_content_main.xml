<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_scrollFlags="scroll|enterAlways"

            app:title=" "
            >
            <RadioGroup
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:id="@+id/radiogroup"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:singleLine="true"
                    android:background="@null"
                    android:button="@null"
                    android:checked="true"
                    android:id="@+id/rb_cao"
                    android:drawableTop="@drawable/all_flower"
                    android:layout_width="80dp"
                    android:layout_height="80dp" />
                <RadioButton
                    android:singleLine="true"
                    android:background="@null"
                    android:button="@null"
                    android:drawableTop="@drawable/hospital"
                    android:id="@+id/rb_hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <RadioButton
                    android:singleLine="true"
                    android:background="@null"
                    android:button="@null"
                    android:drawableTop="@drawable/sun"
                    android:id="@+id/rb_knowledge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  />
                <RadioButton
                    android:singleLine="true"
                    android:background="@null"
                    android:button="@null"
                    android:id="@+id/rb_note"
                    android:drawableTop="@drawable/pen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  />

            </RadioGroup>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />
</android.support.design.widget.CoordinatorLayout>
